<div class="px-4 py-8">
  {% paginate collection.products by section.settings.number_of_products_per_page %}

    <h1 class="text-3xl text-center">
      {{ collection.title }}
    </h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3">
        {% for product in collection.products %}
          {% render 'product-card', product_product: product %}
        {% else %}
          <p>There Are No Product Inside of this Collection</p>
        {% endfor %}
      </div>
    </div>
    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>


{% schema %}
  {
    "name": "Collection template",
    "settings": [
      {
        "type": "range",
        "id": "number_of_products_per_page",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 3,
        "label": "Number of Product Per Page "
      }, {
        "type": "checkbox",
        "id": "enable_vendor",
        "label": "Enable Vendor",
        "default": true
      }
    ]
  }
{% endschema %}