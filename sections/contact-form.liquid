<div class="max-w-7xl mx-auto py-5">
  {% form 'contact' %}
    <div class="max-w-xl mx-auto flex flex-col space-y-3 px-4">
      {% if form.errors %}
        <div class="border p-5">
          <div class="flex flex-row item-center w-full my-3">
            <div class="text-red-500">
              {% render 'icon-failed' %}
            </div>
            <div class="text-sm font-medium ml-3">
              Oh no ! your comment was not posted
            </div>
          </div>

          <ul class="px-4 mb-3 ml-7 list-decimal">
            {% for error in form.errors %}
              <li>
                <span>{{ form.errors.message[error] }}</span>
              </li>
            {% endfor %}
          </ul>

        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-green-500">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">
            Comment is posted successfully
          </div>
        </div>
      {% endif %}

      <div class="flex flex-col space-y-3 md:space-x-4 md:flex-row md:space-y-0">
        <div class="md:w-1/2">
          <label for="contact_name">Name</label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            class="border border-black py-3 px-4 w-full text-sm">
        </div>
        <div class="md:w-1/2">
          <label for="contact_email">Email Address</label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            class="border border-black py-3 px-4 w-full text-sm">
        </div>
      </div>
      <div class="flex flex-col">
        <label for="contact_message">Message</label>
        <textarea
          name="contact[body]"
          id="contact_message"
          class="border border-black py-3 px-4 text-sm w-full resize-none"></textarea>
      </div>
      <input
        type="submit"
        value="Submit Message"
        class="bg-black text-white px-4 py-2 inline-block cursor-pointer hover:bg-slate-500">
    </div>
  {% endform %}
</div>


{% schema %}
  {
    "name": "Contact Form",
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}