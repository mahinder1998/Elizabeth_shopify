<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1 class="text-center text-3xl font-bold">{{ blog.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
              {% if article.image %}
                <a href="{{article.title}}">
                  <img
                    class="w-full h-80 object-cover"
                    src="{{ article.image  | img_url: 'medium'  }}"
                    alt="{{article.image.alt}}">
                </a>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
              {% endif %}
              <div class="p-4">
                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>
                {% if article.excerpt.size > 0 %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% endif %}
                <a class="font-mwdium text-blue-600 hover:text-blue-800" href="{{ article.url }}">{{ section.settings.read-more }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endpaginate %}
</div>



{% schema %}
  {
    "name": "Blog",
    "settings": [
      {
        "type": "range",
        "id": "number_of_blog_posts",
        "step": 1,
        "min": 1,
        "max": 6,
        "label": "Blog posts per page",
        "default": 3
      }, {
        "type": "text",
        "id": "read-more",
        "label": "Read More",
        "default": "Read More"
      }
    ]
  }
{% endschema %}